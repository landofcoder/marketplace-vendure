{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "removeComments": true,
      "noLib": false,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "sourceMap": true,
      "enableIvy": false
    },
    "files": ["./index.ts"],
    "exclude": ["node_modules", "**/__tests__/*","src/**/ui/*"]
  }